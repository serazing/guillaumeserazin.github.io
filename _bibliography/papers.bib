	author = {Sérazin, G. and Penduff, T. and Grégorio, S. and Barnier, B. and Molines, J.-M. and Terray, L.},
	month = dec,
	year = {2014},
	keywords = {Interannual variability, Ocean models, Oceanic variability, sea level, Altimetry},
	pages = {4279--4292},
	file = {Sérazin et al. - 2014 - Intrinsic Variability of Sea Level from Global Oce.pdf:/home/serazin/Zotero/storage/DJPED2P8/Sérazin et al. - 2014 - Intrinsic Variability of Sea Level from Global Oce.pdf:application/pdf;Snapshot:/home/serazin/Zotero/storage/A4VBZJBC/JCLI-D-14-00554.html:text/html}
