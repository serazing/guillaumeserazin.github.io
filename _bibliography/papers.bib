@misc{serazin_intrinsic_2013,
	address = {Vienna, Austria},
	type = {Oral},
	title = {Intrinsic variability in the global eddying ocean: an {OGCM}-based analysis of spatiotemporal scales},
	abstract = {Ocean general circulation models (OGCMs) spontaneously generate low-frequency intrinsic variability when their
resolution allows the production of mesoscale eddies (e.g. 1/4◦ and finer). Global variance analysis (Penduff et
al., 2011) and regional EOF analysis (Taguchi et al., 2010) on Sea Surface Height have shown that this intrinsic
contribution to the total variability is particularly strong in eddy-active regions, and may largely dominate the
atmospherically-forced component.
In this presentation, we investigate the spatiotemporal scales of this oceanic intrinsic variability from a
327-year seasonally-forced global 1/4◦ OGCM simulation (no interannual forcing), and its 50-year counterpart
driven by the full range of atmospheric timescales (with interannual forcing). Both model outputs are low-passed
filtered temporally to extract interannual-to-decadal scales. We then compare the spatial scales and magni-
tudes of the full and intrinsic low-frequency variabilities. Results are presented for variables (e.g. Sea-Surface
Temperature, Mixed Layer Depth, Heat fluxes) that are significantly impacted by intrinsic variability, and that
are likely to be involved in the processes which couple the ocean, the atmosphere, and the biogeochemical systems.
We argue that such OGCM-based investigations extend and fruitfully complement more idealized dynami-
cal system studies, which have shown the intrinsic and chaotic nature of transitions between circulation patterns
(e.g. Pierini and Dijkstra, 2009).},
	author = {Sérazin, G. and Penduff, T. and Terray, L. and Grégorio, S. and Barnier, B. and Molines, J.-M.},
	month = apr,
	year = {2013},
	file = {Sérazin et al. - 2013 - Intrinsic variability in the global eddying ocean.pdf:/home/serazin/Zotero/storage/XXIA4KEQ/Sérazin et al. - 2013 - Intrinsic variability in the global eddying ocean.pdf:application/pdf}
}

@misc{serazin_oceanic_2014,
	address = {Honolulu, HI, USA},
	type = {Oral},
	title = {Oceanic intrinsic variability: spatio-temporal scales and model resolution},
	abstract = {In high-resolution Ocean General Circulation Models (Penduff et al., 2011) as in idealized studies (Djikstra and Ghil, 2005), a substantial amount of low-frequency variability is spontaneously generated by oceanic non-linearities, i.e. without any low-frequency atmospheric variability. We study this oceanic intrinsic variability by comparing a seasonally-forced global ocean simulation with its counterpart driven by the full range of atmospheric timescales. Comparing two 1/4°-resolution simulations of this kind reveals that the low-frequency SSH variance at small scales ({\textless} 6°) is largely intrinsic and colocated with mesoscale activity. The large-scale ({\textgreater} 12°) low-frequency variability, although generally driven by atmospheric variability, remains largely intrinsic in three hotspots (Gulf Stream, Kuroshio, ACC) where it reaches 50-80\% of the total SSH variance. The influence of resolution on various intrinsic variability features is in then presented from two equivalent global 1/12° simulations, in which the physics of mesoscale eddies is better reproduced.},
	author = {Sérazin, G. and Penduff, T. and Terray, L. and Grégorio, S. and Barnier, B. and Molines, J.-M.},
	month = feb,
	year = {2014},
	file = {Sérazin et al. - 2013 - Oceanic intrinsic variability spatio-temporal sca.pdf:/home/serazin/Zotero/storage/X5RJVMQK/Sérazin et al. - 2013 - Oceanic intrinsic variability spatio-temporal sca.pdf:application/pdf}
}

